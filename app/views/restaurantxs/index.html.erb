<div class="container">
  <div class="d-flex  flex-wrap justify-content-around">
    <% @restaurants.each do |rest|%>
    <div class="box-card m-4 p-3" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1466978913421-dad2ebd01d17?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1567&q=80')">
      <p><%= rest.name%></p>
      <%= link_to "More info",  restaurantx_path(rest), class: "btn btn-primary" %>
      <div class="stars d-flex">
        <%rest.stars.times do %>
        <p><i class="fas fa-star"></i></p>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>


