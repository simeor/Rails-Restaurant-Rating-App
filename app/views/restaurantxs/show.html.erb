<div class="page-center">
  <h1><%=@restaurant.name%></h1>
  <p>Adress: <%= @restaurant.adress%></p>
  <div class="stars d-flex">
    <%@restaurant.stars.times do %>
    <p><i class="fas fa-star"></i></p>
    <% end %>
  </div>
  <% @restaurant.reviews.each do |rev| %>
  <p>" <%=rev.content %> "</p>
  <% end %>
  <%= link_to "Add Review", new_restaurantx_review_path(@restaurant), class: "btn btn-success m-1"  %>
  <%= link_to "Edit", edit_restaurantx_path(@restaurant), class: "btn btn-danger m-1" %>
  <%= link_to "Back", restaurantxs_path, class: "btn btn-primary m-1"%>
</div>
